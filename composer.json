{
    "name": "totten/loco",
    "description": "Loco is the YAML-based \"local-compose\" process manager",
    "require": {
        "marcj/topsort": "^1.1",
        "symfony/yaml": "~3.0",
        "symfony/finder": "~3.0",
        "symfony/console": "~3.0",
        "symfony/filesystem": "~3.0",
        "symfony/event-dispatcher": "~3.0",
        "symfony/cache": "~3.0",
        "civicrm/composer-downloads-plugin": "~3.0"
    },
    "bin": ["bin/loco"],
    "autoload": {
      "psr-4": {
        "Loco\\": "src/"
      }
    },
    "config": {
      "platform": {
        "php": "7.1"
      },
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "extra": {
        "downloads": {
            "box": {
                "url": "https://github.com/humbug/box/releases/download/3.15.0/box.phar",
                "path": "bin/box",
                "type": "phar"
            },
            "phpunit5": {
                "version": "5.x",
                "url": "https://phar.phpunit.de/phpunit-5.phar",
                "path": "extern/phpunit5",
                "type": "phar"
            },
            "phpunit8": {
                "version": "8.x",
                "url": "https://phar.phpunit.de/phpunit-8.phar",
                "path": "extern/phpunit8",
                "type": "phar"
            }
        }
    }
}
