{
    "name": "totten/loco",
    "description": "Loco is the YAML-based \"local-compose\" process manager",
    "require": {
        "marcj/topsort": "^1.1",
        "symfony/yaml": "~4.4",
        "symfony/finder": "~4.4",
        "symfony/console": "~4.4",
        "symfony/filesystem": "~4.4",
        "symfony/event-dispatcher": "~4.4",
        "symfony/cache": "~4.4",
        "civicrm/composer-downloads-plugin": "~3.0",
        "lesser-evil/shell-verbosity-is-evil": "~1.0",
        "psr/simple-cache": "^1.0",
        "cweagans/composer-patches": "^1.7"
    },
    "bin": ["bin/loco"],
    "autoload": {
      "files": [
        "src/php7-overloads.php"
      ],
      "psr-4": {
        "Loco\\": "src/"
      }
    },
    "config": {
        "platform": {
            "php": "7.1.4"
        },
        "preferred-install": "source",
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true,
            "cweagans/composer-patches": true
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "extra": {
        "patches": {
            "marcj/topsort": {
                "Fix PHP 8.x warnings": "patches/topsort-110-php8.diff"
            }
        },
        "downloads": {
            "box": {
                "url": "https://github.com/humbug/box/releases/download/3.15.0/box.phar",
                "path": "bin/box",
                "type": "phar"
            },
            "phpunit5": {
                "version": "5.x",
                "url": "https://phar.phpunit.de/phpunit-5.phar",
                "path": "extern/phpunit5",
                "type": "phar"
            },
            "phpunit8": {
                "version": "8.x",
                "url": "https://phar.phpunit.de/phpunit-8.phar",
                "path": "extern/phpunit8",
                "type": "phar"
            }
        }
    }
}
